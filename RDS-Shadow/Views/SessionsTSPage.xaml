<Page
    x:Class="RDS_Shadow.Views.SessionsTSPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls_legacy="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header: style like SessionsPage — border + background so it visually matches -->
        <Border Grid.Row="0" CornerRadius="6" Padding="6" Margin="0,-8,0,8" Background="{ThemeResource SessionsBarBackgroundBrush}" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="0">
            <Grid Height="48" Padding="6" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <AutoSuggestBox x:Name="tbSearch" x:Uid="Sessions_FilterTextBox"
                                AutomationProperties.Name="Search"
                                QueryIcon="Find"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Grid.Column="0"
                                MinWidth="150"
                                TextChanged="tbSearch_TextChanged"
                                QuerySubmitted="tbSearch_QuerySubmitted" />

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="8">
                    <AppBarButton x:Name="refresh" x:Uid="Sessions_RefreshButton" Click="RefreshButton_Click" VerticalAlignment="Center"
                                  Width="48" Height="48" MinWidth="48" MinHeight="48" Padding="0" Background="Transparent" BorderThickness="0">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE777;" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton x:Name="sendMessageToAllUser" x:Uid="Sessions_SendMessageAllButton" Click="SendAllButton_Click" VerticalAlignment="Center"
                                  Height="48" MinHeight="48" Padding="0" Background="Transparent" BorderThickness="0">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8BD;" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </AppBarButton.Icon>
                        <AppBarButton.Content>
                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE8BD;" />
                                <TextBlock x:Name="sendAllText" x:Uid="Sessions_SendMessageAllButton_Text" VerticalAlignment="Center" />
                            </StackPanel>
                        </AppBarButton.Content>
                    </AppBarButton>
                </StackPanel>
            </Grid>
        </Border>

        <controls_legacy:DataGrid x:Name="shadowingView" Grid.Row="1" AutoGenerateColumns="False" ItemsSource="{x:Bind MyData}" CanUserSortColumns="True" Sorting="shadowingView_Sorting" IsReadOnly="True" DoubleTapped="DataGrid_DoubleTapped" RightTapped="DataGrid_RightTapped">
            <controls_legacy:DataGrid.ContextFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem x:Name="menuLogoutItem" x:Uid="Sessions_Context_Logout" Text="Abmelden" Click="Abmelden_Click"/>
                    <MenuFlyoutItem x:Name="menuSendMessageItem" x:Uid="Sessions_Context_SendMessage" Text="Nachricht senden" Click="SendMessageToUser_Click"/>
                </MenuFlyout>
            </controls_legacy:DataGrid.ContextFlyout>

            <FlyoutBase.AttachedFlyout>
                <Flyout x:Name="messageFlyout" Placement="Full">
                    <Flyout.FlyoutPresenterStyle>
                        <Style TargetType="FlyoutPresenter">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="MaxHeight" Value="400"/>
                        </Style>
                    </Flyout.FlyoutPresenterStyle>
                    <StackPanel>
                        <TextBlock x:Name="messageFlyoutTitle" FontWeight="SemiBold" Margin="0,0,0,8" TextWrapping="Wrap" />
                        <TextBox x:Uid="Sessions_MessageTextBox" x:Name="messageTextBox" TextWrapping="Wrap" AcceptsReturn="True" Width="350" Height="320" />
                        <Button x:Uid="Sessions_Message_Send_Button" x:Name="SendButton" Click="SendButton_Click" Margin="0,10,0,0" />
                    </StackPanel>
                </Flyout>
            </FlyoutBase.AttachedFlyout>

            <controls_legacy:DataGrid.Columns>
                <controls_legacy:DataGridTextColumn x:Uid="Sessions_Column_Username" x:Name="colUsername" Header="Benutzer" Binding="{Binding Username}" />
                <controls_legacy:DataGridTextColumn x:Uid="Sessions_Column_ServerName" x:Name="colServerName" Header="Server" Binding="{Binding ServerName}" />
                <controls_legacy:DataGridTextColumn x:Uid="Sessions_Column_ClientName" x:Name="colClientName" Header="Client" Binding="{Binding ClientName}" />
                <controls_legacy:DataGridTextColumn x:Uid="Sessions_Column_SessionId" x:Name="colSessionId" Header="Sitzungs-ID" Binding="{Binding SessionId}" />
            </controls_legacy:DataGrid.Columns>
        </controls_legacy:DataGrid>
    </Grid>
</Page>
